@page
@model Index
@using Services
@using Enums

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@Model.Title</title>
    @if (AppGlobal.IsDevelopment)
    {
        <link href="~/css/Index.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    }
    else
    {
        <link href="~/css/Index.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    }
</head>
<body>
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row tcx-row-header d-flex justify-content-between">
            <div>
                <button class="btn btn-primary" type="button" onclick="Project.New();">new project</button>
                <button class="btn btn-secondary" type="button">save</button>

            </div>
            <div>
                <button class="btn btn-secondary" type="button">refresh</button>
                <button class="btn btn-secondary" type="button" onclick="Logout.Logout();">sign out</button>
            </div>
        </div>
        <div class="row tcx-row-main">
            <div class="col-12 p-0" id="mainDiv"></div>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Project setup</h5>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    *@
                </div>
                <div id="myModalBody" class="modal-body">
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div id="myErrorModal" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myErrorModalTitle">@Localization.TitleError</h5>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-4">
                                <p></p>
                                <p class="text-center">
                                    <div class="tcx-logo"></div>
                                </p>
                            </div>
                            <div class="col-8 my-auto">
                                <div id="myErrorModalText"></div>
                                <a id="myErrorModalLink" href="#"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeButton" style="@ButtonStyle.Secondary" data-dismiss="modal" data-target="#myErrorModal">@Localization.ButtonClose</button>
                </div>
            </div>
        </div>
    </div>

    <div id="myNotification" class="alert alert-warning">
    </div>

    @await Html.PartialAsync("_ScriptSetup")
</body>
</html>