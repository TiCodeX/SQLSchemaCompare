@page
@model Login
@using Enums
@using Services
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@Model.Title</title>
    @if (AppGlobal.IsDevelopment)
    {
        <link href="~/css/Login.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    }
    else
    {
        <link href="~/css/Login.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    }
</head>
<body>
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row tcx-row-login">
            <div class="col-12 p-0" id="mainDiv">
                @* Url is stored in the input field because it will be set to the webview after registering the event handlers *@
                @if (!Model.Verified)
                {
                    <input id="url" type="hidden" value="@Model.LoginEndpoint" />
                }
                <input id="urlSubscribe" type="hidden" value="@Model.SubscribeEndpoint" />
                <webview class="tcx-login-webview" id="webview" partition="x"></webview>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Localization.TitleLoginError</h5>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-4">
                                <p></p>
                                <p class="text-center">
                                    <div class="tcx-logo"></div>
                                </p>
                            </div>
                            <div class="col-8 my-auto">
                                <div id="myModalText"></div>
                                <a id="myModalLink" href="#"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeButton" style="@ButtonStyle.Secondary" data-dismiss="modal" data-target="#myModal">@Localization.ButtonClose</button>
                    <button type="button" style="@ButtonStyle.Primary" data-dismiss="modal" onclick="Login.QuitWindow();">@Localization.ButtonQuit</button>
                </div>
            </div>
        </div>
    </div>

    <div id="myNotification" class="alert alert-warning">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <span id="myNotificationMessage"></span>
    </div>

    <div class="tcx-loader"></div>

    @* In order to make jquery work with both Chrome and Electron *@
    @* Keep a reference to module and restore it after jquery is loaded *@
    <script>if (typeof module === 'object') { window.module = module; module = undefined; }</script>
    <script src="~/lib/jquery/jquery-3.3.1.min.js"></script>
    <script>if (window.module) module = window.module;</script>

    <script src="~/lib/popperjs/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>


    @* SQLCompare scripts *@
    @if (AppGlobal.IsDevelopment)
    {
        <script src="~/js/ApiResponse.js" asp-append-version="true"></script>
        <script src="~/js/Logger.js" asp-append-version="true"></script>
        <script src="~/js/Utility.js" asp-append-version="true"></script>
        <script src="~/js/Localization.js" asp-append-version="true"></script>
        <script src="~/js/Login.js" asp-append-version="true"></script>
    }
    else
    {
        <script src="~/js/Login.min.js" asp-append-version="true"></script>
    }
</body>
</html>

