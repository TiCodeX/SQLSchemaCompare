@page
@using Core.Interfaces
@model Main
@{
    var different = Model.CompareResult.Tables.Where(x => x.SourceItem != null && x.TargetItem != null && !x.Equal).ToList();
    var onlySource = Model.CompareResult.Tables.Where(x => x.SourceItem != null && x.TargetItem == null).ToList();
    var onlyTarget = Model.CompareResult.Tables.Where(x => x.TargetItem != null && x.SourceItem == null).ToList();
    var same = Model.CompareResult.Tables.Where(x => x.SourceItem != null && x.TargetItem != null && x.Equal).ToList();
}

<div id="mainTop">
    <div class="card">
        <div class="card-header" data-toggle="collapse" data-target="#collapseBoth">
            <h5 class="mb-0">in both, but different (@different.Count)</h5>
        </div>
        <div id="collapseBoth" class="collapse show">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 10%">Type</th>
                        <th style="width: 45%">Name</th>
                        <th style="width: 45%">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in different)
                    {
                        <tr load-sql="/Main?handler=CreateScript&id=@item.Id"
                            load-sql-method="GET">
                            <td>Table</td>
                            <td>@item.SourceItem?.Name</td>
                            <td>@item.TargetItem?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-header" data-toggle="collapse" data-target="#collapseLeft">
            <h5 class="mb-0">only in Source (@onlySource.Count)</h5>
        </div>
        <div id="collapseLeft" class="collapse hide">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 10%">Type</th>
                        <th style="width: 45%">Name</th>
                        <th style="width: 45%">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in onlySource)
                    {
                        <tr load-sql="/Main?handler=CreateScript&id=@item.Id"
                            load-sql-method="GET">
                            <td>Table</td>
                            <td>@item.SourceItem?.Name</td>
                            <td>@item.TargetItem?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-header" data-toggle="collapse" data-target="#collapseRight">
            <h5 class="mb-0">only in Target (@onlyTarget.Count)</h5>
        </div>
        <div id="collapseRight" class="collapse hide">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 10%">Type</th>
                        <th style="width: 45%">Name</th>
                        <th style="width: 45%">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in onlyTarget)
                    {
                        <tr load-sql="/Main?handler=CreateScript&id=@item.Id"
                            load-sql-method="GET">
                            <td>Table</td>
                            <td>@item.SourceItem?.Name</td>
                            <td>@item.TargetItem?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-header" data-toggle="collapse" data-target="#collapseSame">
            <h5 class="mb-0">identical (@same.Count)</h5>
        </div>
        <div id="collapseSame" class="collapse hide">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Type</th>
                        <th scope="col">Name</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in same)
                    {
                        <tr load-sql="/Main?handler=CreateScript&id=@item.Id"
                            load-sql-method="GET">
                            <th scope="row">Table</th>
                            <td>@item.SourceItem?.Name</td>
                            <td>@item.TargetItem?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="mainBottom" style="display: none;">
    <div class="navbar p-0">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#sqlDiff">SQL</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu1">Menu 2</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu2">Menu 3</a>
            </li>
        </ul>
        <button class="btn btn-outline-secondary btn-sm" close-split>X</button>
    </div>

    <div class="tab-content" style="height: calc(100% - 36px);">
        <div id="sqlDiff" class="tab-pane fade show active" style="height: 100%;">
        </div>
        <div id="menu1" class="tab-pane fade" style="height: 100%;">
            <h3>Menu 1</h3>
            <p>Some content in menu 1.</p>
        </div>
        <div id="menu2" class="tab-pane fade" style="height: 100%;">
            <h3>Menu 2</h3>
            <p>Some content in menu 2.</p>
        </div>
    </div>
</div>