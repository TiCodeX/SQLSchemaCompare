@using Core.Enums
@using Core.Interfaces
@using Enums
@using Core.Entities.DatabaseProvider
@using Services
@model ADatabaseProviderOptions
@{
    var divId = Guid.NewGuid().ToString();
    var prefix = ((CompareDirection)ViewBag.Prefix).ToString();
}
<div class="card" id="@divId">
    <input type="hidden" name="Direction" value="@prefix">
    <div class="card-body pb-0">
        <h5 class="card-title text-center">@ViewBag.Title</h5>
        <p class="card-text">
            <div class="form-group">
                <label class="form-label">@Localization.LabelType</label>
                <select name="@(prefix)DatabaseType" class="form-control-sm">
                    @{
                        @:<option value="@DatabaseType.MicrosoftSql" @(Model is MicrosoftSqlDatabaseProviderOptions ? "selected" : "")>Microsoft SQL Server</option>
                        @:<option value="@DatabaseType.MySql" @(Model is MySqlDatabaseProviderOptions ? "selected" : "")>Oracle MySQL Server</option>
                        @:<option value="@DatabaseType.PostgreSql" @(Model is PostgreSqlDatabaseProviderOptions ? "selected" : "")>PostgreSQL Server</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">@Localization.LabelHostname</label>
                <input type="text" name="@(prefix)Hostname" value="@Model.Hostname" class="form-control-sm">
            </div>
            <div class="form-group">
                <label class="form-label">@Localization.LabelUsername</label>
                <input type="text" name="@(prefix)Username" value="@Model.Username" class="form-control-sm">
            </div>
            <div class="form-group">
                <label class="form-label">@Localization.LabelPassword</label>
                <input type="password" name="@(prefix)Password" value="@Model.Password" class="form-control-sm">
            </div>


            <div class="form-group row">
                <div class="col-9">
                    <label class="form-label">@Localization.LabelUseWindowsAuthentication</label>
                </div>
                <div class="col-3 text-right">
                    <label class="switch">
                        @{
                            @:<input type="checkbox" name="@(prefix)UseWindowsAuthentication" data-value-type="boolean" @(Model is MicrosoftSqlDatabaseProviderOptions options && options.UseWindowsAuthentication ? "checked=\"checked\"" : "")>
                        }
                        <span class="slider"></span>
                    </label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-9">
                    <label class="form-label">@Localization.LabelUseSSL</label>
                </div>
                <div class="col-3 text-right">
                    <label class="switch">
                        @{
                            @:<input type="checkbox" name="@(prefix)UseSSL" data-value-type="boolean" @(Model.UseSSL ? "checked=\"checked\"" : "")>
                        }
                        <span class="slider"></span>
                    </label>
                </div>
            </div>
            <div class="form-group ">
                <label class="form-label">@Localization.LabelDatabase</label>
                <div class="input-group input-group-sm">
                    <select name="@(prefix)Database" class="form-control-sm">
                        @if (!string.IsNullOrEmpty(Model.Database))
                        {
                            <option value="@Model.Database">@Model.Database</option>
                        }
                    </select>
                    <div class="input-group-append">
                        <button style="@ButtonStyle.Info" onclick="Project.LoadDatabaseSelectValues($(this), '@(prefix)Database', '@divId');">
                            <span>&#x21bb;</span>
                        </button>
                    </div>
                </div>
            </div>
        </p>
    </div>
</div>