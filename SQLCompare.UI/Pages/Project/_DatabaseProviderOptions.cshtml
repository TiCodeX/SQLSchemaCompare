@using Core.Enums
@using Core.Interfaces
@{
    var divId = Guid.NewGuid();
}
<div class="card" id="@divId">
    <div class="card-body">
        <h5 class="card-title">@ViewBag.Title</h5>
        <p class="card-text">
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text min-width-100">Type</span>
                    </div>
                    <select class="form-control" name="@(ViewBag.IdPrefix)DatabaseType">
                        @foreach (var type in Enum.GetValues(typeof(DatabaseType)))
                        {
                            <option value="@((int)type)">@type</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text min-width-100">Hostname</span>
                    </div>
                    <input type="text" class="form-control" name="@(ViewBag.IdPrefix)Hostname" value="localhost\SQLEXPRESS">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text min-width-100">Username</span>
                    </div>
                    <input type="text" class="form-control" name="@(ViewBag.IdPrefix)Username" value="brokerpro">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text min-width-100">Password</span>
                    </div>
                    <input type="password" class="form-control" name="@(ViewBag.IdPrefix)Password" value="brokerpro05">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text min-width-100">Database</span>
                    </div>
                    <select class="form-control" id="@(ViewBag.IdPrefix)Database"></select>
                    <div class="input-group-append">
                        <button class="btn btn-info" type="button"
                                load-select="/Project/CompareProject?handler=@(ViewBag.Handler)"
                                load-select-method="POST"
                                load-select-target="@(ViewBag.IdPrefix)Database"
                                load-select-data-from-div="@divId">
                            &#x21bb;
                        </button>
                    </div>
                </div>
            </div>
        </p>
    </div>
</div>