@using Core
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @if (AppGlobal.IsDevelopment)
    {
        <link href="~/css/Index.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    }
    else
    {
        <link href="~/css/site.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    }
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery-3.3.1.min.js" onload="window.$ = window.jQuery = module.exports;"></script>
    <script src="~/lib/popperjs/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    @if (AppGlobal.IsDevelopment)
    {
        <script src="~/js/Index.js" asp-append-version="true"></script>
    }
    else
    {
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    }
</body>
</html>
