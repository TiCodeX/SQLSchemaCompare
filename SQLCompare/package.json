{
    "name": "sqlcompare",
    "version": "2018.8.5",
    "description": "SQL Compare",
    "main": "app.js",
    "author": {
        "name": "TiCodeX SA"
    },
    "build": {
        "appId": "ch.ticodex.sqlcompare",
        "productName": "SQL Compare",
        "copyright": "Copyright @ 2018 ${author}",
        "remoteBuild": false,
        "win": {
            "target": "nsis",
            "publish": {
                "provider": "generic",
                "url": ""
            }
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": false,
            "installerHeader": "installerHeader.bmp",
            "installerSidebar": "installerSidebar.bmp",
            "uninstallerSidebar": "installerSidebar.bmp",
            "license": "eula.html"
        },
        "linux": {
            "target": "AppImage"
        },
        "mac": {
            "target": "default",
            "category": "public.app-category.productivity"
        },
        "files": [
            "!app.ts",
            "!*.njsproj",
            "!*.njsproj.user",
            "!tsconfig.json",
            "!bin",
            "!obj",
            "!build"
        ],
        "extraFiles": [
            {
                "from": "../.publish",
                "to": "bin",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "output": "../installer"
        }
    },
    "scripts": {
        "dist-win": "electron-builder --win --publish always",
        "dist-linux": "electron-builder --linux --publish always",
        "dist-mac": "electron-builder --mac --publish always"
    },
    "postinstall": "electron-builder install-app-deps",
    "devDependencies": {
        "@types/detect-port": "^1.1.0",
        "@types/electron-window-state": "^2.0.31",
        "@types/glob": "^5.0.35",
        "@types/node": "^6.0.116",
        "electron": "^1.8.8",
        "electron-builder": "^20.28.2"
    },
    "dependencies": {
        "detect-port": "^1.2.3",
        "electron-updater": "^3.1.1",
        "electron-window-state": "^4.1.1",
        "glob": "^7.1.2",
        "log4js": "^3.0.5"
    }
}
