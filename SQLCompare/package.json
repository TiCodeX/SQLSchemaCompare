{
    "name": "sqlcompare",
    "version": "2018.9.1",
    "description": "The swiss army knive for DB schema comparison and synchronization which runs on multiple OS and supports various DB. TiCodeX SQL Compare runs on Windows, Mac and Linux and connects to Microsoft SQL (MS-SQL), mySQL and Postgress. In addition Azure SQL and MS-SQL on Amazon RDS is supported.",
    "main": "app.min.js",
    "homepage": "https://www.ticodex.com",
    "author": {
        "name": "TiCodeX SA",
        "email": "support@ticodex.com"
    },
    "build": {
        "appId": "ch.ticodex.sqlcompare",
        "productName": "SQL Compare",
        "copyright": "Copyright @ 2018 ${author}",
        "remoteBuild": false,
        "win": {
            "target": "nsis",
            "artifactName": "SQLCompare-${version}.${ext}",
            "publish": {
                "provider": "generic",
                "url": ""
            }
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true,
            "installerHeader": "installerHeader.bmp",
            "installerSidebar": "installerSidebar.bmp",
            "uninstallerSidebar": "installerSidebar.bmp",
            "license": "eula.html",
            "include": "installer.nsh"
        },
        "linux": {
            "target": [
                "deb",
                "rpm",
                "tar.gz"
            ],
            "category": "Utility",
            "synopsis": "The swiss army knive for DB schema comparison",
            "executableName": "SQLCompare",
            "artifactName": "SQLCompare-${version}.${ext}",
            "publish": {
                "provider": "generic",
                "url": ""
            }
        },
        "mac": {
            "target": "default",
            "category": "public.app-category.productivity"
        },
        "files": [
            "!app.ts",
            "!app.js",
            "!*.njsproj",
            "!*.njsproj.user",
            "!tsconfig.json",
            "eula.html",
            "!bin",
            "!obj",
            "!build"
        ],
        "extraFiles": [
            {
                "from": "../.publish",
                "to": "bin",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "output": "../installer"
        }
    },
    "scripts": {
        "dist-win-x64": "electron-builder --win --publish always",
        "dist-linux-x64": "electron-builder --linux --publish always",
        "dist-osx-x64": "electron-builder --mac --publish always"
    },
    "postinstall": "electron-builder install-app-deps",
    "devDependencies": {
        "@types/detect-port": "^1.1.0",
        "@types/electron-window-state": "^2.0.31",
        "@types/glob": "^5.0.35",
        "@types/node": "^6.0.116",
        "electron": "^1.8.8",
        "electron-builder": "^20.28.2",
        "uglify-js": "^3.4.9"
    },
    "dependencies": {
        "detect-port": "^1.2.3",
        "electron-updater": "^3.1.1",
        "electron-window-state": "^4.1.1",
        "glob": "^7.1.2",
        "log4js": "^3.0.5"
    }
}
