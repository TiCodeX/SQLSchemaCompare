{
    "name": "sqlcompare",
    "version": "1.0.0",
    "description": "SQLCompare",
    "main": "app.js",
    "author": {
        "name": "TiCodeX SA"
    },
    "build": {
        "appId": "ch.ticodex.sqlcompare",
        "remoteBuild": false,
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": false
        },
        "linux": {
            "target": "AppImage"
        },
        "mac": {
            "target": "default",
            "category": "public.app-category.productivity"
        },
        "copyright": "Copyright @ 2018 ${author}",
        "files": [
            "!app.ts",
            "!*.njsproj",
            "!*.njsproj.user",
            "!tsconfig.json",
            "!bin",
            "!obj"
        ],
        "extraFiles": [
            {
                "from": "../.publish",
                "to": "bin",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "directories": {
            "output": "../installer"
        }
    },
    "scripts": {
        "dist-win": "electron-builder --win",
        "dist-linux": "electron-builder --linux",
        "dist-mac": "electron-builder --mac"
    },
    "postinstall": "electron-builder install-app-deps",
    "devDependencies": {
        "@types/detect-port": "^1.1.0",
        "@types/electron-window-state": "^2.0.31",
        "@types/glob": "^5.0.35",
        "@types/node": "^6.0.116",
        "electron": "^1.8.7",
        "electron-builder": "^20.27.0"
    },
    "dependencies": {
        "detect-port": "^1.2.3",
        "electron-window-state": "^4.1.1",
        "glob": "^7.1.2",
        "log4js": "^3.0.4"
    }
}
